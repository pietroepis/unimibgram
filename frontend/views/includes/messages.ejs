<% for (let i=0; i<messages.length; i++){ %>
    <div class="msg-line <%= messages[i].senderId == userId ? "sent" : "received" %>">
        <div class="msg-item">
            <% if (messages[i].type == 1) { %>
                <a target="_blank" href="<%= baseUrl %>/attachments/<%= messages[i].content %>">Allegato</a>
            <% } else{ %>
                <%= messages[i].content %>
            <% } %>
        </div>
        <div class="info">
            <span class="time"><%= messages[i].datetime %></span>
            <% if (messages[i].senderId == userId){ %>
                <img class="status" src="assets/img/<%= messages[i].status == 1 ? "ic_status_not_read" : "ic_status_read" %>.png"/>
            <% } %>
        </div>
    </div>
<% } %>